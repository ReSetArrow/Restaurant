@model Restaurant.Models.UserLogin

@{
    ViewData["Title"] = "登入";
}
@if (TempData["RegisterMessage"] != null)
{
    //取得RegisterMessage=="OK"時，顯示註冊成功(GPT)
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>註冊會員成功！</strong> 請登入後繼續使用。
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["LogoutMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>登出成功！</strong> 請放心關閉瀏覽器。
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="row  justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group  mb-3">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> 
            <div class="form-group  mb-3 text-center text-danger">
                @ViewData["Message"]
            </div>
            
            <div class="form-group d-flex align-items-start  m-5  justify-content-center">
                <input type="submit" value="點我登入" class="btn btn-primary me-2" />
                <a class="btn btn-primary" asp-area="" asp-controller="UserLogin" asp-action="Register">註冊帳號</a>
            </div>

           
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
