@model Restaurant.Models.UserLogin

@{
    ViewData["Title"] = "會員資料";
}
@* 成功新增、刪除、修改的訊息 *@
@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success text-center" style="display:none;">
        @TempData["SuccessMessage"]
    </div>
}

<style>
    .display-name {
        background-color: #9FDFDA;
        border-radius: 5px;
        margin-bottom: 10px; /* 統一間距 */
    }

    .display-value {
        padding: 5px;
        border-radius: 5px;
        margin-bottom: 10px; /* 統一間距 */
    }

    .card {
        border: none; /* 移除卡片的外框線 */
    }

    .form-group {
        margin-bottom: 15px; /* 統一間距 */
    }
</style>

<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="display-name">@Html.DisplayNameFor(model => model.Account)</label>
                        <div class="display-value">@Html.DisplayFor(model => model.Account)</div>
                    </div>
                    <div class="form-group row">
                        <label class="display-name">@Html.DisplayNameFor(model => model.Name)</label>
                        <div class="display-value">@Html.DisplayFor(model => model.Name)</div>
                    </div>
                    <div class="form-group row">
                        <label class="display-name">@Html.DisplayNameFor(model => model.Birthday)</label>
                        <div class="display-value">@Html.DisplayFor(model => model.Birthday)</div>
                    </div>
                    <div class="form-group row">
                        <label class="display-name">@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                        <div class="display-value">@Html.DisplayFor(model => model.PhoneNumber)</div>
                    </div>
                    @if (Model.RoleCode != "MB")
                    {
                        <div class="form-group row">
                            <label class="display-name">@Html.DisplayNameFor(model => model.ManagerNumber)</label>
                            <div class="display-value">@Html.DisplayFor(model => model.ManagerNumber)</div>
                        </div>
                        <div class="form-group row">
                            <label class="display-name">@Html.DisplayNameFor(model => model.RoleCodeNavigation.Title)</label>
                            <div class="display-value">@Html.DisplayFor(model => model.RoleCodeNavigation.Title)</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.UserID" class="btn btn-primary">編輯資料</a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var successMessage = document.getElementById('successMessage');
            if (successMessage) {
                alert(successMessage.textContent.trim());
            }
        });
    </script>
}