@model Restaurant.Models.Order

@{
    ViewData["Title"] = "修改資料";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="row text-center" >
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderNumber" />
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusCode" class="control-label"></label>
                <select asp-for="StatusCode" class="form-control" asp-items="ViewBag.StatusCode"></select>
                <span asp-validation-for="StatusCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserNumber" class="control-label"></label>
                <select asp-for="UserNumber" class="form-control" asp-items="ViewBag.UserNumber"></select>
                <span asp-validation-for="UserNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentCode" class="control-label"></label>
                <select asp-for="PaymentCode" class="form-control" asp-items="ViewBag.PaymentCode"></select>
                <span asp-validation-for="PaymentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
