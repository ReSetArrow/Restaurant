@model Restaurant.Models.Status

@{
    ViewData["Title"] = "新增訂單狀態";
}
<div class="text-end">
    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-house-door-fill"></i> 付款方式首頁
    </a>
</div>
<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StatusCode" class="control-label"></label>
                    <input asp-for="StatusCode" class="form-control" />
                    <span asp-validation-for="StatusCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusCategory" class="control-label"></label>
                    <input asp-for="StatusCategory" class="form-control" />
                    <span asp-validation-for="StatusCategory" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4">
                    <input type="submit" value="確認新增" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
